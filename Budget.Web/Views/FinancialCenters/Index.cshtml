@model IEnumerable<Budget.Web.Models.FinancialCenterModel>
@{
    ViewBag.Title = "Центри фінансової відповідальності";
}
<div class="page-header">
    <h2>
        Центри фінансової відповідальності
    </h2>
</div>
<div class="row-fluid">
    <div class="span10 offset1">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Назва</th>
                    <th>Тип</th>
                    <th>Адреса</th>
                    <th>Телефон</th>
                    <th>Керівник</th>
                    <th>Додаткова інформація</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var fcentr in Model)
                {
                    <tr>
                        <td>@fcentr.Name</td>
                        <td>@fcentr.Type</td>
                        <td>@fcentr.Adress</td>
                        <td>@fcentr.Phone</td>
                        <td>@fcentr.DirectorName</td>
                        <td>@fcentr.Description</td>
                        <td>
                            <div class="btn-group">
                                <a class="btn" href="@Url.Action("Edit", new { id = fcentr.Id })"><i class="icon-pencil"></i></a>
                                <a class="btn" href="@Url.Action("Delete", new { id = fcentr.Id })"><i class="icon-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div>
            @Html.ActionLink("Додати новий ЦФВ", "Create", null, new { @class = "btn btn-primary span5" })
        </div>
    </div>
</div>
