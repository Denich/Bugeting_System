<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/css/bootstrap.min.css")" rel="stylesheet" type="text/css" media="screen"/>
    <!--<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />-->
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>
    @RenderSection("JavaScript", false)
</head>
<body>
    <div class="container-fluid">
        <header>
            <!--<h1>Система бюджетування</h1>-->
            <div class="navbar navbar-inverse">
                <div class="navbar-inner">
                    @Html.ActionLink("Система бюджетування", "Index", "Home", null, new { @class = "brand" })
                    <ul class="nav">
                        <li>@Html.ActionLink("Активність", "Index", "Home")</li>
                        <li class="dropdown">
                            <a id="managementMenu" class="dropdown-toggle" data-toggle="dropdown" role="button" href="#">Управління <b class="caret"></b></a>
                            <ul class="dropdown-menu" role="menu" aria-labelledby="managementMenu">
                                <li>@Html.ActionLink("Центри фінансової відповідальності", "Index", "FinancialCenters")</li>
                                <li>@Html.ActionLink("Співробітники", "Index", "Employees")</li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a id="budgetMenu" class="dropdown-toggle" data-toggle="dropdown" role="button" href="#">
                                Бюджетування <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu" role="menu" aria-labelledby="budgetMenu">
                                <li>@Html.ActionLink("Активні бюджети", "Index", "ActiveBudgets")</li>
                                <li>@Html.ActionLink("Затвердженні бюджети", "Index", "ApprovalBudgets")</li>
                                <li>@Html.ActionLink("Бюджетний архів", "Index", "BudgetArchive")</li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("Довідники", "Index", "BudgetCategoryInfo")</li>
                        <li>@Html.ActionLink("Інформація", "About", "Home")</li>
                    </ul>
                    <div class="navbar-form pull-right">
                        @Html.Partial("_LogOnPartial")
                    </div>
                </div>
            </div>

        </header>
        <section>
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>
</body>
</html>
