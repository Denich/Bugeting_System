@model IEnumerable<Budget.Web.Models.EmployeModel>

@{
    ViewBag.Title = "Співробітники";
}

<div class="page-header">
    <h2>
        Співробітники
    </h2>
</div>
<div class="row-fluid">
    <div class="span10 offset1">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Імя</th>
                    <th>Посада</th>
                    <th>Може упраляти бюджетами</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employe in Model)
                {
                    <tr>
                        <td>@employe.FullName</td>
                        <td>@employe.PositionName</td>
                        <td>@employe.GetAllowedApproveStatus</td>
                        <td>
                            <div class="btn-group">
                                <a class="btn" href="@Url.Action("Edit", new { id = employe.Id })"><i class="icon-pencil"></i></a>
                                <a class="btn" href="@Url.Action("Delete", new { id = employe.Id })"><i class="icon-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div>
            @Html.ActionLink("Додати новий ЦФВ", "Create", null, new { @class = "btn btn-primary span5" })
        </div>
    </div>
</div>
